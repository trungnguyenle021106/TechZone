{
  "Routes": [
    // 1. Catalog Service Route
    {
      "DownstreamPathTemplate": "/products",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5000
        }
      ],
      "UpstreamPathTemplate": "/catalog-service/products",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE" ]
    },
    // 2. Basket Service Route
    {
      "DownstreamPathTemplate": "/basket",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5010
        }
      ],
      "UpstreamPathTemplate": "/basket-service/basket",
      "UpstreamHttpMethod": [ "GET", "POST" ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      }
    },
    // 3. Identity Service Route
    {
      "DownstreamPathTemplate": "/auth/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5001 // Port của Identity.API (Kiểm tra lại launchSettings.json của Identity nếu khác)
        }
      ],
      "UpstreamPathTemplate": "/identity-service/auth/{everything}",
      "UpstreamHttpMethod": [ "POST" ]
    }
    // Ordering Service hiện tại chưa có Public API (chỉ nhận message ngầm), nên chưa cần route.
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:6060"
  }
}