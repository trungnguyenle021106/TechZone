{
  "Routes": [
    // 1. Catalog Service Route
    {
      "DownstreamPathTemplate": "/products/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5000
        }
      ],
      "UpstreamPathTemplate": "/catalog-service/products/{everything}",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE" ]
    },
    // 2. Basket Service Route
    {
      "DownstreamPathTemplate": "/basket", // Đã bỏ {everything}
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5010
        }
      ],
      "UpstreamPathTemplate": "/basket-service/basket", // Đã bỏ {everything}
      "UpstreamHttpMethod": [ "GET", "POST" ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      }
    }
    // Ordering Service hiện tại chưa có Public API (chỉ nhận message ngầm), nên chưa cần route.
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:6060"
  }
}